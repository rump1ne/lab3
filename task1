#include <iostream>
#include <fstream>

using namespace std;

int main() {
    int R;
    ifstream inputFile("R.txt"); // Открыть файл "R.txt" для чтения

    if (inputFile.is_open()) { // Проверить, удалось ли открыть файл
        inputFile >> R; // Считать целочисленное значение из файла и сохранить в переменную R
        inputFile.close(); // Закрыть входной файл
    }
    else {
        setlocale(LC_ALL, "Russian");
        cout << "Ошибка открытия файла R.txt." << endl; // Вывести сообщение об ошибке, если открытие файла не удалось
        return 1; // Вернуть 1, чтобы указать на возникновение ошибки
    }

    int x = R / 3; // Выполнить вычисление, используя значение, считанное из файла

    ofstream outputFile("stepen.txt"); // Открыть файл "stepen.txt" для записи

    if (outputFile.is_open()) { // Проверить, удалось ли открыть файл
        outputFile << x; // Записать вычисленное значение в выходной файл
        outputFile.close(); // Закрыть выходной файл
    }
    else {
        cout << "Ошибка открытия файла stepen.txt." << endl; // Вывести сообщение об ошибке, если открытие файла не удалось
        return 1; // Вернуть 1, чтобы указать на возникновение ошибки
    }

    cout << "Результат успешно записан в файл stepen.txt." << endl; // Вывести сообщение об успешном выполнении
    return 0; // Вернуть 0, чтобы указать на успешное выполнение программы
}
